@model SV21T1020880.DomainModels.Customer

@{
    ViewBag.Title = "Đăng ký tài khoản";
}
<style>
    label {
        margin-bottom: 5px;
        font-weight: 700;
        font-size: 20px;
    }

    .signup-container {
        margin-top: 5rem;
        display: flex;
        justify-content: center;
    }

    .signup-form {
        width: 50%;
        padding: 2rem;
        border: 1px solid #ced4da;
        border-radius: 5px;
        background-color: #f8f9fa;
    }

    .signup-title {
        text-align: center;
        margin-bottom: 1rem;
    }
</style>
<div class="signup-container mt-5">
    <div class="signup-form">
        <h2 class="signup-title text-center">Đăng ký tài khoản</h2>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }
        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.Success
            </div>
        }

        <form method="post" action="~/Account/Register">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label for="CustomerName">Họ và tên:</label>
                        <input type="text" id="CustomerName" name="CustomerName" class="form-control" required value="@Model.CustomerName" />
                    </div>
                    <div class="form-group">
                        <label for="Address">Địa chỉ:</label>
                        <input type="text" id="Address" name="Address" class="form-control" required value="@Model.Address" />
                    </div>
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        <input type="email" id="Email" name="Email" class="form-control" required value="@Model.Email" />
                    </div>

                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label for="ContactName">Tên giao dịch:</label>
                        <input type="text" id="ContactName" name="ContactName" class="form-control" required value="@Model.ContactName" />
                    </div>

                    <div class="form-group">
                        <label>Tỉnh/Thành phố:</label>
                        <select class="form-control" name="Province">
                            <option value="">--- Chọn Tỉnh/Thành ---</option>
                            @foreach (var province in SV21T1020880.BusinessLayers.CommonDataService.ListOfProvinces())
                            {
                                <option value="@province.ProvinceName">@province.ProvinceName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Phone">Số điện thoại:</label>
                        <input type="text" id="Phone" name="Phone" class="form-control" required value="@Model.Phone" />
                    </div>

                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="Password">Mật khẩu:</label>
                        <input type="password" id="Password" name="password" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="ConfirmPassword">Xác nhận mật khẩu:</label>
                        <input type="password" id="ConfirmPassword" name="confirmPassword" class="form-control" required />
                    </div>
                    <br />
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Đăng ký</button>
                    <a href="/" class="btn btn-danger">Hủy bỏ</a>
                </div>
            </div>
        </form>
    </div>
</div>
