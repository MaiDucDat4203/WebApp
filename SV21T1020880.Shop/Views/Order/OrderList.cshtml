@using SV21T1020880.DomainModels
@model List<Order>
@{
    ViewBag.Title = "Danh sách đơn hàng";
}

<div class="container mt-5">
    <h2 class="text-center">Danh sách đơn hàng của bạn</h2>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["ErrorMessage"]
        </div>
    }
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt hàng</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderID</td>
                        <td>@order.OrderTime.ToString("dd/MM/yyyy")</td>
                        <td>@order.StatusDescription</td>
                        <td class="text-center"><a href="@Url.Action("OrderDetails", new { id = order.OrderID })" class="btn btn-primary">Xem chi tiết</a></td>
                    </tr>
                }
            } else
            {
                <tr>
                    <td colspan="6" class="text-center">Chưa có đơn hàng nào.</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end">
        <a href="/Product" class="btn btn-primary">Quay lại mua hàng</a>
    </div>
</div>
